Form:
<Form>:
	search_lat: coor_lat
	search_long: coor_long
	my_map: map
	my_image: image
	orientation: "vertical"
	BoxLayout:
		orientation: "horizontal"
		MapView:
			size_hint_x: 50
			lat: 0
			long: 0 
			zoom: 1
			id: map
			on_map_relocated: root.draw_marker()
		Image:
			size_hint_x: 50
			source: 'paris.jpg'
			id: image
	BoxLayout:
		height: "40dp"
		size_hint_y: None
		Label:
			size_hint_x: 25
			text: "Lat"
		Label:
			size_hint_x: 25
			id: coor_lat
		Label:
			size_hint_x: 25
			text: "Long"
		Label:
			size_hint_x: 25
			id: coor_long
	BoxLayout:
		height: "40dp"
		size_hint_y: None
		Label:
			size_hint_x: 25
			text: "Distance"
		Label:
			size_hint_x: 25
			text: '0'
			id : dist
		Label:
			size_hint_x: 25
			text: "Score"
		Label:
			size_hint_x: 25
			text: '0'
			id : wynik
		BoxLayout:
			height: "40dp"
			size_hint_y: None	
		Button:
			size_hint_x: 50
			text: "Check"
			on_press: root.check_points()
		Button:
			size_hint_x: 50
			text: "Next"
			on_press: root.next()		